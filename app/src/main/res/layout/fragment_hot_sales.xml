<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HotSalesFragment">

    <ImageView
        android:id="@+id/image_hot_sale"
        android:layout_width="match_parent"
        android:layout_height="182sp"
        android:background="@color/black_figma"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.054"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/circle_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32sp"
        android:layout_marginTop="23sp"
        android:src="@drawable/ic_circle_new"
        app:layout_constraintStart_toStartOf="@+id/image_hot_sale"
        app:layout_constraintTop_toTopOf="@+id/image_hot_sale" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/markpro"
        android:text="@string/new_text"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/circle_new"
        app:layout_constraintEnd_toEndOf="@+id/circle_new"
        app:layout_constraintStart_toStartOf="@+id/circle_new"
        app:layout_constraintTop_toTopOf="@+id/circle_new"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32sp"
        android:layout_marginTop="68sp"
        android:fontFamily="@font/sfprodisplaybold"
        android:letterSpacing="-0.01"
        android:text="Title"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/image_hot_sale"
        app:layout_constraintTop_toTopOf="@+id/image_hot_sale" />

    <TextView
        android:id="@+id/text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32sp"
        android:layout_marginTop="103sp"
        android:fontFamily="@font/sfproisplayregular"
        android:letterSpacing="-0.03"
        android:text="Description"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@+id/image_hot_sale"
        app:layout_constraintTop_toTopOf="@+id/image_hot_sale" />

