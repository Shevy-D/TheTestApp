<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/best_seller_container_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:paddingBottom="45sp"
    android:background="@color/black_from_figma">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="35sp"
        android:paddingEnd="15sp"
        tools:ignore="RtlSymmetry">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="88sp"
            android:layout_height="88sp"
            app:cardCornerRadius="10sp">

            <ImageView
                android:id="@+id/image_cart"
                android:layout_width="88sp"
                android:layout_height="88sp"
                android:adjustViewBounds="true"
                app:layout_constraintBottom_toBottomOf="@+id/bs_container_background"
                app:layout_constraintEnd_toEndOf="@+id/bs_container_background"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/bs_container_background"
                app:layout_constraintTop_toTopOf="@+id/bs_container_background"
                app:layout_constraintVertical_bias="0.0"
                tools:src="@tools:sample/avatars" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6sp"
            android:fontFamily="@font/markpro"
            android:letterSpacing="-0.02"
            tools:text="Galaxy"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/markpro"
            android:letterSpacing="-0.02"
            android:text="$3000.00"
            android:textColor="@color/orange_from_figma"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="26sp"
            android:layout_height="68sp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_background_change_count_btn" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14sp"
                    android:layout_marginBottom="4sp"
                    android:src="@drawable/ic_minus" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/markpro"
                    android:gravity="center"
                    android:letterSpacing="-0.02"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="9sp"
                    android:layout_marginTop="6sp"
                    android:layout_marginBottom="8sp"
                    android:src="@drawable/ic_plus"
                    tools:ignore="SmallSp" />

            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="17sp"
            android:paddingEnd="32sp"
            android:src="@drawable/ic_trash_can" />
    </LinearLayout>
</LinearLayout>